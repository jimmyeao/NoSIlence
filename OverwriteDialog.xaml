<Window x:Class="NoSilence.OverwriteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Overwrite" Height="150" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <TextBlock x:Name="messageText" Text="File already exists. Overwrite?" TextWrapping="Wrap" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10,0,0">
            <Button Content="Yes" Width="60" Margin="5" Click="Yes_Click"/>
            <Button Content="No" Width="60" Margin="5" Click="No_Click"/>
            <Button Content="Yes to All" Width="90" Margin="5" Click="YesToAll_Click"/>
            <Button Content="Cancel" Width="60" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
